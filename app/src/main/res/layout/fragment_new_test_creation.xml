<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/head"
        style="@style/H1"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/new_test"
        android:textColor="@color/textColor"
        android:textSize="@dimen/medium"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head">

        <LinearLayout
            android:id="@+id/block_name"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="@string/name" />

            <EditText
                android:id="@+id/name"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:background="@drawable/input_one_line"
                android:gravity="left|center_vertical"
                android:maxLength="20"
                android:paddingHorizontal="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/block_description"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="@string/description" />

            <EditText
                android:id="@+id/description"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/input_multiply_line"
                android:gravity="left"
                android:maxLength="200"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/block_count"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="@string/count_question"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/count"
                style="@style/input"
                android:layout_width="100dp"
                android:layout_height="64dp"
                android:background="@drawable/input_small_line"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/block_group"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="@string/group"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/group"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:background="@drawable/input_one_line"
                android:gravity="left|center_vertical"
                android:maxLength="20"
                android:paddingHorizontal="20dp" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/ButtonStyleMain"
        android:id="@+id/create"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="@string/CREATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>