<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">


    <TextView
        android:id="@+id/index"
        style="a1|tintBlue"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:background="@drawable/button_normal"
        android:gravity="center"
        android:text="1/10"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="src_in"
        app:layout_constraintBottom_toTopOf="@+id/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/a1"
        android:id="@+id/question"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginTop="76dp"
        android:autoSizeMaxTextSize="@dimen/medium"
        android:autoSizeMinTextSize="@dimen/small"
        android:autoSizeTextType="uniform"
        android:gravity="center_horizontal"
        android:text="Язык Kotlin стал официальным языком разработки android приложений в"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="15:00"
        android:textColor="@color/gray"
        android:textSize="@dimen/medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/endTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/endTest"
        style="@style/ButtonStyleMain"
        android:layout_marginBottom="4dp"
        android:text="@string/end_test"
        android:textSize="@dimen/small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintVertical_bias="0.113">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/a1_text"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:background="@drawable/answer_back"
            android:gravity="center"
            android:text="Тестовый текст"
            android:textSize="@dimen/small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/a2_text"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/answer_back"
            android:gravity="center"
            android:text="Тестовый текст"
            android:textSize="@dimen/small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/a3_text"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/answer_back"
            android:gravity="center"
            android:text="Тестовый текст"
            android:textSize="@dimen/small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/a4_text"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/answer_back"
            android:gravity="center"
            android:text="Тестовый текст"
            android:textSize="@dimen/small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

    </LinearLayout>

    <Button
        android:id="@+id/left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endTest"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="@drawable/right_arrow"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/endTest" />


</androidx.constraintlayout.widget.ConstraintLayout>