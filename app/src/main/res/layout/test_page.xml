<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameTest"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="@dimen/big"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Вопрос?"
        android:textColor="@color/black"
        android:textSize="@dimen/medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTest" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="15:00"
        android:textColor="@color/gray"
        android:textSize="@dimen/medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/endTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/endTest"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/end_test"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a1_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question">

        <TextView
            android:id="@+id/a1_text"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:autoSizeMaxTextSize="@dimen/medium"
            android:autoSizeMinTextSize="@dimen/small"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Тестовый текст"
            android:textColor="@color/black"
            android:textSize="@dimen/medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <ImageButton
            android:id="@+id/a1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:background="#00990055"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a2_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1_layout">

        <TextView
            android:id="@+id/a2_text"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:autoSizeMaxTextSize="@dimen/medium"
            android:autoSizeMinTextSize="@dimen/small"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Тестовый текст"
            android:textColor="@color/black"
            android:textSize="@dimen/medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a2"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginStart="10dp"
            android:id="@+id/a2"
            android:src="@drawable/circle"
            android:background="#00990055"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a3_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a2_layout">

        <TextView
            android:id="@+id/a3_text"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:autoSizeMaxTextSize="@dimen/medium"
            android:autoSizeMinTextSize="@dimen/small"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Тестовый текст"
            android:textColor="@color/black"
            android:textSize="@dimen/medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a3"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginStart="10dp"
            android:id="@+id/a3"
            android:src="@drawable/circle"
            android:background="#00990055"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a4_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a3_layout">

        <TextView
            android:id="@+id/a4_text"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:autoSizeMaxTextSize="@dimen/medium"
            android:autoSizeMinTextSize="@dimen/small"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Тестовый текст"
            android:textColor="@color/black"
            android:textSize="@dimen/medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a4"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginStart="10dp"
            android:id="@+id/a4"
            android:src="@drawable/circle"
            android:background="#00990055"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="#00990055"
        android:gravity="center"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endTest"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:src="@drawable/right"
        android:layout_marginBottom="4dp"
        android:background="#00990055"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/endTest"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>