<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/index"
        style="a1|tintBlue"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_normal"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="src_in"
        android:gravity="center"
        android:text="1/10"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="@string/question" />

            <EditText
                android:id="@+id/question"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/input_multiply_line"
                android:gravity="left"
                android:maxLength="200"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="Ответ 1 (верный)"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/a1"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:background="@drawable/input_one_line"
                android:gravity="left|center_vertical"
                android:maxLength="20"
                android:paddingHorizontal="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="Ответ 2"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/a2"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:background="@drawable/input_one_line"
                android:gravity="left|center_vertical"
                android:maxLength="20"
                android:paddingHorizontal="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/head">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="Ответ 3"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/a3"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:background="@drawable/input_one_line"
                android:gravity="left|center_vertical"
                android:maxLength="20"
                android:paddingHorizontal="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/a1"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:gravity="left"
                android:text="Ответ 4"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/a4"
                style="@style/input"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:background="@drawable/input_one_line"
                android:gravity="left|center_vertical"
                android:maxLength="20"
                android:paddingHorizontal="20dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/right_arrow"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/endTest"
        style="@style/ButtonStyleMain"
        android:layout_marginBottom="4dp"
        android:text="сохранить"
        android:textSize="@dimen/small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>