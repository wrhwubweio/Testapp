<resources>
    <style name="MainStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/textColorSecondary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textViewStyle">@style/a1</item>
    </style>

    <style name="ButtonStyleMain" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/ramona</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:gravity">center</item>
        <item name="tint">@color/textColor</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="backgroundTintMode">src_in</item>
    </style>

    <style name="ButtonStyleSecond" parent="ButtonStyleMain">
        <item name="android:textColor">@color/buttonTextColor</item>>
        <item name="android:background">@drawable/button_second</item>
    </style>

    <style name="a1" parent="android:Widget.TextView">
        <item name="fontFamily">@font/ramona</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="a2" parent="a1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="H1" parent="a1">
        <item name="font">@font/raydis</item>
        <item name="android:textSize">@dimen/medium_big</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H2" parent="H1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="image_vec">
        <item name="tint">@color/textColor</item>
    </style>

    <style name="input">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="backgroundTintMode">multiply</item>
    </style>

    <style name="tintBlue">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="backgroundTintMode">src_in</item>
    </style>

    <style name="tintBlueSrc">
        <item name="tint">@color/colorPrimary</item>
        <item name="tintMode">multiply</item>
    </style>

    <style name="answers">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="backgroundTintMode">multiply</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>